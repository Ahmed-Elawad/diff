<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Chatter_Free_Welcome_Email</fullName>
        <description>Chatter Free Welcome Email</description>
        <protected>false</protected>
        <recipients>
            <field>User__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Center_of_Excellence_Email_Templates/Chatter_Free_Welcome2</template>
    </alerts>
    <alerts>
        <fullName>New_User_Request_Completed</fullName>
        <description>New User Request Completed</description>
        <protected>false</protected>
        <recipients>
            <field>Requestor_Email__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Center_of_Excellence_Email_Templates/New_User_Request_Completed_V2</template>
    </alerts>
    <alerts>
        <fullName>New_User_Request_Rejected</fullName>
        <description>New User Request Rejected</description>
        <protected>false</protected>
        <recipients>
            <field>Requestor_Email__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Center_of_Excellence_Email_Templates/New_User_Request_Rejected_V2</template>
    </alerts>
    <alerts>
        <fullName>New_User_Request_Status</fullName>
        <description>New User Request Status</description>
        <protected>false</protected>
        <recipients>
            <field>Requestor_Email__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Center_of_Excellence_Email_Templates/Chatter_User_Request_Complete</template>
    </alerts>
    <alerts>
        <fullName>New_User_Request_Submitted</fullName>
        <description>New User Request Submitted</description>
        <protected>false</protected>
        <recipients>
            <field>Requestor_Email__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Center_of_Excellence_Email_Templates/New_User_Request_Submitted_V3</template>
    </alerts>
    <rules>
        <fullName>Chatter Welcome Letter</fullName>
        <actions>
            <name>Chatter_Free_Welcome_Email</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>NewUserRequest__c.Status__c</field>
            <operation>equals</operation>
            <value>Complete</value>
        </criteriaItems>
        <criteriaItems>
            <field>NewUserRequest__c.User__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>NewUserRequest__c.New_User_Email__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>NewUserRequest__c.Request_Type__c</field>
            <operation>equals</operation>
            <value>Chatter Free User</value>
        </criteriaItems>
        <description>When a new user is successfully created, send the welcome email to the user.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>New User Request Complete</fullName>
        <actions>
            <name>New_User_Request_Status</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <description>When the New User Request is completed and the Requesting User is different than the New User, send the email</description>
        <formula>AND((Request_Complete__c = true)            ,ISPICKVAL(Request_Type__c,&quot;Chatter Free User&quot;)          , ((New_User_Email__c !=  Requestor_Email__c) ||    ISPICKVAL(Status__c,&quot;Failed&quot;))       )</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>New User Request Completed</fullName>
        <actions>
            <name>New_User_Request_Completed</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>NewUserRequest__c.New_User_Email__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>NewUserRequest__c.Status__c</field>
            <operation>equals</operation>
            <value>Complete</value>
        </criteriaItems>
        <criteriaItems>
            <field>NewUserRequest__c.Request_Type__c</field>
            <operation>equals</operation>
            <value>Chatter Free User,Reactivate,Standard User,Read Only</value>
        </criteriaItems>
        <description>Used to notify requestor that their New User Request has been completed</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>New User Request Rejected</fullName>
        <actions>
            <name>New_User_Request_Rejected</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>NewUserRequest__c.New_User_Email__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>NewUserRequest__c.Status__c</field>
            <operation>equals</operation>
            <value>Rejected</value>
        </criteriaItems>
        <criteriaItems>
            <field>NewUserRequest__c.Request_Type__c</field>
            <operation>equals</operation>
            <value>Chatter Free User,Reactivate,Standard User,Read Only</value>
        </criteriaItems>
        <description>Used to notify requestor that their New User Request has been rejected</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>New User Request Submitted</fullName>
        <actions>
            <name>New_User_Request_Submitted</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>NewUserRequest__c.New_User_Email__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>NewUserRequest__c.Status__c</field>
            <operation>equals</operation>
            <value>Pending</value>
        </criteriaItems>
        <criteriaItems>
            <field>NewUserRequest__c.Request_Type__c</field>
            <operation>equals</operation>
            <value>Chatter Free User,Reactivate,Standard User,Read Only</value>
        </criteriaItems>
        <description>Used to notify requestor that their New User Request has been submitted</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
