    <rules>
        <fullName>Populate Close Date</fullName>
        <actions>
            <name>Set_Close_Date</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>PEO_Onboarding_Document_Discrepency__c.Status__c</field>
            <operation>equals</operation>
            <value>Resolved</value>
        </criteriaItems>
        <criteriaItems>
            <field>PEO_Onboarding_Document_Discrepency__c.Close_Date__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Prospect Updated Discrepancy Comments - Email</fullName>
        <actions>
            <name>Prospect_Comments_Chatter_Email</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>NOT(ISBLANK(Prospect_Comments__c ) ) &amp;&amp; ISCHANGED(Prospect_Comments__c )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
