IF((PRIORVALUE(Product_Employee_Count__c)+1)/(Product_Employee_Count__c+1) &lt; 0.90, FALSE, TRUE)) &amp;&amp; 
NOT(ISPICKVAL(Product_Employee_Count_Change_Reason__c, &quot;&quot;)) &amp;&amp;  
Product_Plan_Code__c = &quot;1010&quot; , TRUE, FALSE)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
