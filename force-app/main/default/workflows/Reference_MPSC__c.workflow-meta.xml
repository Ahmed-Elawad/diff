        </criteriaItems>
        <criteriaItems>
            <field>Reference_MPSC__c.Transfer_Call_Type__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>When Transfer Notification Method is populated, populate Transfer Call Date field</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
