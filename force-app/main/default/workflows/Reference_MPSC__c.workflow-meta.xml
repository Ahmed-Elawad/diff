    </rules>
    <rules>
        <fullName>Populate PM ready to Transfer Date</fullName>
        <actions>
            <name>Populate_PM_ready_to_Transfer_Date</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Reference_MPSC__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>Reference MPSC Transfer</value>
        </criteriaItems>
        <criteriaItems>
            <field>Reference_MPSC__c.PM_Approved__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <description>When PM Approved is populated, populate the PM ready to Transfer Date field</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Populate Send Survey</fullName>
        <active>true</active>
        <description>Time-based workflow to populate the Send Survey check field</description>
        <formula>AND(  (Send_Survey_Trigger__c),  ISBLANK(Date_Survey_Sent__c),  ISBLANK(Date_Survey_Complete__c)  )</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Populate_Send_Survey</name>
                <type>FieldUpdate</type>
            </actions>
            <timeLength>1</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Populate Transfer Call Date</fullName>
