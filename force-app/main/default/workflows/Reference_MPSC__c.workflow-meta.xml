    <rules>
        <fullName>Populate Date Survey Complete and Survey Status Closed</fullName>
        <actions>
            <name>Populate_Date_Survey_Completed</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Populate_SurveyStatus_Closed</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Populate Date Survey Complete when Date Survey Complete for Payroll BSR, Date Survey Complete for Flex HR BSR and Date Survey Complete for TAA BSR are all populated</description>
        <formula>NOT(ISBLANK(Date_Survey_Sent__c)) &amp;&amp; NOT(ISBLANK(Date_Survey_Complete_for_Payroll_BSR__c)) &amp;&amp; NOT(ISBLANK(Date_Survey_Complete_for_Flex_HR_BSR__c)) &amp;&amp; NOT(ISBLANK(Date_Survey_Complete_for_TAA_BSR__c)) &amp;&amp; NOT(ISPICKVAL(Overall_Client_Experience__c,&apos;&apos;))</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Populate Date Survey Complete for Flex HR BSR</fullName>
        <actions>
            <name>Populate_DateSurveyComplFlexHRBSR</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Populate_SurveyStatus_InProgress</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Populate Date Survey Complete for Flex HR BSR when Flex HR Rating is populated</description>
        <formula>NOT(ISBLANK(Date_Survey_Sent__c)) &amp;&amp; ISBLANK(Date_Survey_Complete_for_Flex_HR_BSR__c) &amp;&amp; ISCHANGED(Flex_HR_Rating__c) &amp;&amp; ISPICKVAL(PRIORVALUE(Flex_HR_Rating__c), &quot;&quot;)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Populate Date Survey Complete for Payroll BSR</fullName>
