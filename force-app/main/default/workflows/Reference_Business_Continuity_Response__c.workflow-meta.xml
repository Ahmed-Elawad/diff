<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Send_BCR_email_to_PRS_and_Supervisor</fullName>
        <description>Send BCR email to PRS and Supervisor</description>
        <protected>false</protected>
        <recipients>
            <field>Assigned_Payroll_Specialist__c</field>
            <type>contactLookup</type>
        </recipients>
        <recipients>
            <field>Assigned_Supervisor__c</field>
            <type>contactLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>All_Templates/BCR_Complete</template>
    </alerts>
    <rules>
        <fullName>BCR Completion Email</fullName>
        <actions>
            <name>Send_BCR_email_to_PRS_and_Supervisor</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>BCR_Email_Sent</name>
            <type>Task</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Reference_Business_Continuity_Response__c.Status__c</field>
            <operation>equals</operation>
            <value>Complete</value>
        </criteriaItems>
        <criteriaItems>
            <field>Reference_Business_Continuity_Response__c.Action_Required_Payroll_Service_Provider__c</field>
            <operation>equals</operation>
            <value>Yes</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <tasks>
        <fullName>BCR_Email_Sent</fullName>
        <assignedTo>sfdc_automation@paychex.com</assignedTo>
        <assignedToType>user</assignedToType>
        <dueDateOffset>0</dueDateOffset>
        <notifyAssignee>false</notifyAssignee>
        <priority>Normal</priority>
        <protected>false</protected>
        <status>Completed</status>
        <subject>BCR Email Sent</subject>
    </tasks>
</Workflow>
