<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Risk_Red_Flag_Escalation_Alert</fullName>
        <ccEmails>accountorigination@paychex.com</ccEmails>
        <ccEmails>nobrien@paychex.com</ccEmails>
        <description>Risk: Red Flag Escalation Alert</description>
        <protected>false</protected>
        <senderType>CurrentUser</senderType>
        <template>Risk_E_Mailers/Risk_Red_Flag_Escalation_Case_Created</template>
    </alerts>
    <rules>
        <fullName>Risk%3A Red Flag Escalation Alert Rule</fullName>
        <actions>
            <name>Risk_Red_Flag_Escalation_Alert</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Reference_Credit_Risk__c.OwnerId</field>
            <operation>equals</operation>
            <value>Risk:Red Flag Escalation Queue</value>
        </criteriaItems>
        <criteriaItems>
            <field>Reference_Credit_Risk__c.Type__c</field>
            <operation>equals</operation>
            <value>Red Flag Escalation</value>
        </criteriaItems>
        <criteriaItems>
            <field>Reference_Credit_Risk__c.Current_Step__c</field>
            <operation>equals</operation>
            <value>Case Creation</value>
        </criteriaItems>
        <description>Email to be sent to the Account Origination email address when a Red Flag Escalation Case is assigned to the Red Flag Escalation queue</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
