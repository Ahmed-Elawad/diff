<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>SalesForce_to_WC_Retention</fullName>
        <ccEmails>WCRetention@paychex.com</ccEmails>
        <description>SalesForce_to_WC_Retention</description>
        <protected>false</protected>
        <senderType>CurrentUser</senderType>
        <template>Agency_Email_Templates/SalesForce_to_WC_Retention</template>
    </alerts>
    <fieldUpdates>
        <fullName>P_C_Date_Assigned</fullName>
        <description>populates Date Assigned when Date Assigned is Null and Current Step changes from New</description>
        <field>Date_Assigned__c</field>
        <formula>NOW()</formula>
        <name>P&amp;C Date Assigned</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>P%26C Date Assigned</fullName>
        <actions>
            <name>P_C_Date_Assigned</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>AND( 
ISBLANK(PRIORVALUE( Date_Assigned__c )),
ISCHANGED(Current_Step__c), 
ISPICKVAL(PRIORVALUE(Current_Step__c), &apos;New&apos;), 
NOT(ISPICKVAL(Current_Step__c, &apos;New&apos;)) )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
