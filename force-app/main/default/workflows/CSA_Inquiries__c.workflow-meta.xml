    <rules>
        <fullName>CSA Auto Notify Requestor 1</fullName>
        <actions>
            <name>Email_CSA_Case_Requestor_1</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>CSA_Inquiries__c.Request_Type__c</field>
            <operation>equals</operation>
            <value>REFERRAL DISCREPANCY,STAT DISCREPANCY,BONUS DISCREPANCY,SOAR,PAYROLL UNIT DISCREPANCY</value>
        </criteriaItems>
        <criteriaItems>
            <field>CSA_Inquiries__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>Sales CSA Request Record Type</value>
        </criteriaItems>
        <description>When Request Type = PAYROLL UNIT, REFERRAL, BONUS, STAT DISCREPANCIES, SOAR</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
