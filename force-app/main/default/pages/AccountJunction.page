<!-- A page to link a Prospect-Client record to it's Parent

   History
   -------
   04/21/2016 Cindy Freeman   Created   
 -->

<apex:page id="AccountJunction" standardController="Account" extensions="AccountJunctionController"
    tabStyle="Account">

<apex:sectionHeader title="Link Prospect-Client to Parent"
                      subtitle="{!childAcct.Name}"/>
  	<apex:form >
    <apex:pageBlock id="JunctionBlock">
    <apex:pageMessages /> 

      <apex:pageBlockButtons >
    	<apex:commandButton value="Save" action="{!save}" rendered="{!showSave}" rerender="JunctionBlock" status="saveStatus"/>
        <apex:commandButton value="Cancel" immediate="true" action="{!cancel}" rendered="{!showCancel}"/>  
        <apex:commandButton value="Return to {!childAcct.Name}" immediate="true" action="{!returnToAcct}" rendered="{!juncSaved}" />
        <apex:actionStatus id="saveStatus" startText="   (processing...)" stopText=""/>
      </apex:pageBlockButtons>

      <apex:pageBlockSection columns="1" title="Junction">
        <apex:inputField value="{!junc.Parent_Account__c}" />          
        <apex:inputField value="{!junc.Type__c}" required="true"/>
      </apex:pageBlockSection>
      
    
  </apex:pageBlock>
  </apex:form>
</apex:page>