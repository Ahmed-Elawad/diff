<aura:component description="BannerCPAPersona">
    <aura:attribute name="persona" type="String" />

    <div class="box" title="Open Cases">
        <div class="banner-header slds-align_absolute-center">
            <h4 class="slds-item_label slds-text-color_weak slds-truncate slds-text-align_center">CPA Persona</h4>
        </div>
        <div class="banner-body">
            <div class="slds-item_detail slds-truncate slds-align_absolute-center column" title="CPA Persona">
                <img src="{!$Resource.BannerIcons + '/LightningIcons/person.png'}" />
                <span>{!v.persona}</span>
            </div>
        </div>
    </div>
</aura:component>