<aura:component description="BannerCurrentPackage">
    <aura:attribute name="currentPackage" type="String"/>
    
    <aura:if isTrue="{!v.currentPackage.length>0}">
    <div class="box" title="Current Package">
        <div class="banner-header slds-align_absolute-center">
            <h4 class="slds-item_label slds-text-color_weak slds-truncate slds-text-align_center">Current Package</h4>
        </div>
        <div class="banner-body" style="max-width: 500px">
            <div class="{!'slds-item_detail slds-truncate slds-align_absolute-center column'}" title="Current Package" >
                <span>
                    <div class="no-text-overflow" >
                         {!v.currentPackage} 
                    </div>
                </span>
            </div>
        </div>
    </div>
    </aura:if>
</aura:component>