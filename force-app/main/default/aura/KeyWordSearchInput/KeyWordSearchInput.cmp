<aura:component controller="KeyWordSearchController"  implements="flexipage:availableForAllPageTypes,lightning:isUrlAddressable,force:hasRecordId,force:appHostable" access="global">
    <aura:handler name='init' value='{!this}' action='{!c.init}' />
    
    <!-- attributes to be received from parent component-->
    <aura:attribute name="label" type="String" />
    <aura:attribute name="objectApiName" type="String" />
    <aura:attribute name="idFieldApiName" type="String" />
    <aura:attribute name="valueFieldApiName" type="String" />
    <aura:attribute name="extendedWhereClause" type="String" />
    <aura:attribute name="maxRecords" type="Integer" default="50"/>
    <aura:attribute name='disable' type='boolean' default='false' />
    <aura:attribute name='recordId' type='String' />
    <aura:attribute name='required' type='Boolean' default="false"/>
    
    <!-- Attributes specific to component-->
    <aura:attribute name="results" type="List" />
    <aura:attribute name="openDropDown" type="Boolean" default="false" />
    <aura:attribute name="selectedOption" type="String" />
    <aura:attribute name="inputValue" type="String" />
    <aura:attribute name="inputSearchFunction" type="Object" />
    <aura:attribute name='emptyResult' type='Boolean' default='false' />
    <aura:attribute name='allowInlineSave' type='Boolean' default='false' />
    <aura:attribute name="inputDescr" type="String" />
    
