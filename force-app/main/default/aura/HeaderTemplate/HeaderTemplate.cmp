<aura:component >
    
    <aura:attribute name="title" type="String" required="true"/>
    <aura:attribute name="subtitle" type="String" required="true"/>
    <aura:attribute name="iconName" type="String" required="false" default="standard:task"/>
    
	<lightning:layout class="slds-page-header slds-page-header--object-home">

        <lightning:layoutItem >
            <lightning:icon iconName="{!v.iconName}" alternativeText="{!v.sourceObjectName}"/>
        </lightning:layoutItem>

        <lightning:layoutItem padding="horizontal-small">
            <div class="page-section page-header">
                <h1 class="slds-text-heading--label">{!v.title}</h1>
                <h2 class="slds-text-heading--medium">{!v.subtitle}</h2>
            </div>
        </lightning:layoutItem>

    </lightning:layout>
</aura:component>