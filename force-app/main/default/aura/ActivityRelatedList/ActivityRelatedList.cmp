<aura:component controller="ActivityRelatedListAuraService" implements="lightning:isUrlAddressable,force:appHostable,flexipage:availableForAllPageTypes">

    <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="activities" type="Object[]"/>
    <aura:attribute name="columns" type="List"/> 
    <lightning:workspaceAPI aura:id="workspace" />    

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
     

    <c:HeaderTemplate title="Activities" subtitle="Open Activities" iconName="standard:task"/>
	<aura:if isTrue = "{!v.activities.length >0}" >
    	<lightning:dataTable keyField="id" data="{!v.activities}" columns="{!v.columns}" hideCheckboxColumn="true"/>
	</aura:if>
    
    <aura:if isTrue = "{!v.activities.length == 0}"> 
    No Open Activities 
    </aura:if>
   
</aura:component>