<aura:component >
	<aura:attribute name="leadId" type="Id" access="global"/>

    <aura:attribute name="lead" type="Object"/>
    <aura:attribute name="queryLead" type="Object"/>
    <aura:attribute name="recordLoadError" type="String"/>

    <c:NSSMsgHelper recordId="{!v.leadId}" />

    <force:recordData aura:id="accountRecordLoader"
        recordId="{!v.leadId}"
        fields="Id,FirstName,LastName,Company,Email,Phone,NumberOfEmployees,Current_Prior_Method__c,Frequency__c,Street,City,State,PostalCode"
        targetRecord="{!v.lead}"
        targetFields="{!v.queryLead}"
        targetError="{!v.recordLoadError}"
    />

    <div class="slds-grid">
        <div class="slds-col slds-size--1-of-1 slds-small-size--1-of-3 slds-medium-size--1-of-3">
            Contact Name: <lightning:formattedText value="{!v.queryLead.FirstName+' '+v.queryLead.LastName}"/><br/>
            Contact Phone: <lightning:formattedPhone value="{!v.queryLead.Phone}"/><br/>
            Contact Email: <lightning:formattedEmail value="{!v.queryLead.Email}"/><br/>
        </div>
        <div class="slds-col slds-size--1-of-1 slds-small-size--1-of-3 slds-medium-size--1-of-3">
           Company Name: <lightning:formattedText value="{!v.queryLead.Company}"/><br/>
           Company Phone: <lightning:formattedPhone value="{!v.queryLead.Phone}"/><br/>
           Number of Employees: <lightning:formattedNumber value="{!v.queryLead.NumberOfEmployees}"/><br/>
           Frequency: <lightning:formattedText value="{!v.queryLead.Frequency__c}"/><br/>
           Payroll Current-Prior Method: <lightning:formattedText value="{!v.queryLead.Current_Prior_Method__c}"/><br/>
        </div>
        <div class="slds-col slds-size--1-of-1 slds-small-size--1-of-3 slds-medium-size--1-of-3">
           Address: <lightning:formattedAddress street="{!v.queryLead.Street}"
        city="{!v.queryLead.City}"
        country="{!v.queryLead.Country}"
        province="{!v.queryLead.State}"
        postalCode="{!v.queryLead.PostalCode}"
             />
        </div>
    </div>
    
    <!-- Display Lightning Data Service errors, if any -->
    <aura:if isTrue="{!not(empty(v.recordLoadError))}">
        <div class="recordError">
            <ui:message title="Error" severity="error" closable="true">
                {!v.recordLoadError}
            </ui:message>
        </div>
    </aura:if>

</aura:component>