<aura:component >
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <aura:attribute name="sourceObjectName" type="String" required="true" />
    <aura:attribute name="iconName" type="String" required="false" />
        <!-- PAGE HEADER -->
    <lightning:layout class="slds-page-header slds-page-header--object-home">
        <lightning:layoutItem >
            <lightning:icon iconName="{!v.iconName}" alternativeText="{!v.sourceObjectName}"/>
        </lightning:layoutItem>
        <lightning:layoutItem padding="horizontal-small">
            <div class="page-section page-header">
                <h1 class="slds-text-heading--label">{!v.sourceObjectName}</h1>
                <h2 class="slds-text-heading--medium">{!v.sourceObjectName}</h2>
            </div>
        </lightning:layoutItem>
    </lightning:layout>
    <!-- / PAGE HEADER -->
</aura:component>