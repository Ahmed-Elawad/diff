<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Audit_Period_is_required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISBLANK( Quality_Audit_for_Who__c )),
ISBLANK(   Audit_Period__c  )
)</errorConditionFormula>
    <errorDisplayField>Audit_Period__c</errorDisplayField>
    <errorMessage>Audit period is required field when Quality Audit for Who? is populated</errorMessage>
</ValidationRule>
