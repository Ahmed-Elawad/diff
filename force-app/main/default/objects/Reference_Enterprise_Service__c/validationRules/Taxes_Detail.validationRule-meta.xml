<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Taxes_Detail</fullName>
    <active>true</active>
    <errorConditionFormula>(ISPICKVAL( Taxes__c , &quot;Yellow: 200 - 249&quot;) ||
ISPICKVAL(Taxes__c , &quot;Red: 250 +&quot;))&amp;&amp;

OR(
ISBLANK( Taxes_Detail__c ))</errorConditionFormula>
    <errorDisplayField>Taxes_Detail__c</errorDisplayField>
    <errorMessage>Taxes Detail is required when Taxes is selected as Red or Yellow</errorMessage>
</ValidationRule>
