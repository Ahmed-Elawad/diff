<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Jobs_Detail</fullName>
    <active>true</active>
    <errorConditionFormula>(ISPICKVAL( Jobs__c , &quot;Yellow: 2500 - 2999&quot;) ||
ISPICKVAL(Jobs__c , &quot;Red: 3000 +&quot;))&amp;&amp;

OR(
ISBLANK( Jobs_Detail__c ))</errorConditionFormula>
    <errorDisplayField>Jobs_Detail__c</errorDisplayField>
    <errorMessage>Jobs Detail is required when Jobs is selected as Red or Yellow</errorMessage>
</ValidationRule>
