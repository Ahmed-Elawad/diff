<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Pay_Components_Detail</fullName>
    <active>true</active>
    <errorConditionFormula>(ISPICKVAL( Pay_Components__c , &quot;Yellow: 200 - 249&quot;) ||
ISPICKVAL(Pay_Components__c , &quot;Red: 250 +&quot;))&amp;&amp;

OR(
ISBLANK( Pay_Components_Detail__c ))</errorConditionFormula>
    <errorDisplayField>Pay_Components_Detail__c</errorDisplayField>
    <errorMessage>Pay Components Detail is required when Pay Components selected as Red or Yellow</errorMessage>
</ValidationRule>
