<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Resolution_details_is_required</fullName>
    <active>true</active>
    <description>Resolution Details</description>
    <errorConditionFormula>ISPICKVAL( Current_Status__c ,&quot;Closed&quot;) &amp;&amp;
 ISBLANK( Resolution_Details__c )</errorConditionFormula>
    <errorDisplayField>Current_Status__c</errorDisplayField>
    <errorMessage>Resolution Details is required when Current Status equals &quot;Closed&quot;</errorMessage>
</ValidationRule>
