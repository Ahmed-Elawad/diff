<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Failure_Reasons_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISPICKVAL(Accuracy__c,&apos;Fail&apos;),
ISBLANK(Failure_Reasons__c ))</errorConditionFormula>
    <errorMessage>Failure Reasons Is required when Accuracy is fail</errorMessage>
</ValidationRule>
