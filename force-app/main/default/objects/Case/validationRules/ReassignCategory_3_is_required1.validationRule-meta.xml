<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ReassignCategory_3_is_required1</fullName>
    <active>true</active>
    <description>Reassign-Category 3 is required if Reassign-Category 2 = 402(g)/415</description>
    <errorConditionFormula>AND(ISPICKVAL(Reassign_Category_2__c,&quot;402(g)/415&quot;),
ISPICKVAL( Reassign_Category_3__c,&quot;&quot;))</errorConditionFormula>
    <errorDisplayField>Reassign_Category_3__c</errorDisplayField>
    <errorMessage>Please enter value for Reassign-Category 3</errorMessage>
</ValidationRule>
