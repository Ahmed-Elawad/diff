<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>POPs_ClosedOutage_requires_Incident_Num</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Status, &quot;Closed - Outage&quot;), ISBLANK( Outage_Incident__c ) )</errorConditionFormula>
    <errorMessage>When selecting &quot;Closed - Outage&quot; as the Status you must populate the Outage Incident # field.</errorMessage>
</ValidationRule>
