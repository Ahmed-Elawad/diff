<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cost_Center_Required</fullName>
    <active>true</active>
    <description>Cost Center Required for internal users</description>
    <errorConditionFormula>AND( ISBLANK( Cost_Center__c ),ISPICKVAL(UserType,&apos;Standard&apos;))</errorConditionFormula>
    <errorDisplayField>Cost_Center__c</errorDisplayField>
    <errorMessage>Cost Center is required</errorMessage>
</ValidationRule>
