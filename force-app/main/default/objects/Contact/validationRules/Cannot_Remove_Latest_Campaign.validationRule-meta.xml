<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cannot_Remove_Latest_Campaign</fullName>
    <active>true</active>
    <description>If a contact has a value in latest campaign it cannot be removed.</description>
    <errorConditionFormula>ISBLANK(Mirror_Ref_Ctct__c) &amp;&amp; ISCHANGED(LatestCampaign__c)&amp;&amp; ISBLANK(LatestCampaign__c)&amp;&amp;NOT(BEGINS($Profile.Name,&quot;System Administrator&quot;))</errorConditionFormula>
    <errorMessage>You cannot remove the latest campaign once its been entered</errorMessage>
</ValidationRule>
