<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Remuneration_Required_when_Included</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Inc_Exc__c, &quot;Inc&quot;),ISNULL(Remuneration__c ))</errorConditionFormula>
