<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>HRE_Prmry_Contact_Time_when_Set_Up_Cmplt</fullName>
    <active>true</active>
    <description>Force update of the Primary Contact Time Zone field when the Set Up Complete field has been checked.</description>
    <errorConditionFormula>AND(
( Set_Up_Complete__c = TRUE ),
( ISPICKVAL(Primary_Contact_Time_Zone__c, &apos;&apos;) ),
(NOT(BEGINS($Profile.Name,&quot;System Administrator&quot;)))
)</errorConditionFormula>
    <errorDisplayField>Primary_Contact_Time_Zone__c</errorDisplayField>
    <errorMessage>Please enter the Primary Contact Time Zone</errorMessage>
</ValidationRule>
