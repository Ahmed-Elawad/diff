<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Approved_with_no_overrides</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL(Status__c,&apos;Approved&apos;)
, NOT(ISPICKVAL(Override_Reason__c,&apos;&apos;))
,  Override_HRG_User__c !=null)</errorConditionFormula>
    <errorMessage>Override Reason and Override User must be empty when not Overriding Selected HRG</errorMessage>
</ValidationRule>
