<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Other_Recordkeeper_Name_is_required</fullName>
    <active>true</active>
    <errorConditionFormula>AND 
( 
ISPICKVAL( New_Recordkeeper__c, &quot;Other&quot;), 
ISBLANK( Other_Recordkeeper_Name__c) 



)</errorConditionFormula>
    <errorMessage>Other Recordkeeper Name is required as New RecordKeeper is selected as &quot;Other&quot;.</errorMessage>
</ValidationRule>
