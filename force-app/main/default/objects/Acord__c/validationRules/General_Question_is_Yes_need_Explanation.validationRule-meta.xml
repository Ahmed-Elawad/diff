AND(ISPICKVAL(Are_employee_health_plans_provided__c, &apos;Yes&apos;),ISBLANK(Employee_health_plan_Explanation__c )), 
AND(ISPICKVAL(Labor_interchange_with_other_business__c, &apos;Yes&apos;),ISBLANK(Labor_Interchange_Explanation__c )), 
AND(ISPICKVAL(Lease_employees_to_from_other_employers__c, &apos;Yes&apos;),ISBLANK(Leased_Employees_Explanation__c )), 
