AND(ISPICKVAL(Own_operate_or_lease_aircraft_watercraft__c, &apos;Yes&apos;),ISBLANK(Aircraft_Watercraft_Explanation__c )), 
AND(ISPICKVAL(Operations_involving_hazardous_material__c, &apos;Yes&apos;),ISBLANK(Hazardous_materials_Explanation__c )), 
AND(ISPICKVAL(Work_performed_underground_or_above_15ft__c, &apos;Yes&apos;),ISBLANK(Underground_or_Above_15_ft_Explanation__c )), 
AND(ISPICKVAL(Work_on_barges_vessels_docks_bridges__c, &apos;Yes&apos;),ISBLANK(Vessels_docks_bridges_Explanation__c )), 
AND(ISPICKVAL(Engaged_in_any_other_type_of_business__c, &apos;Yes&apos;),ISBLANK(Other_business_Explanation__c )), 
AND(ISPICKVAL(Are_subcontractors_used__c, &apos;Yes&apos;),ISBLANK(Subcontractor_Explanation__c )), 
AND(ISPICKVAL(Work_sublet_without_Certificates_of_Ins__c, &apos;Yes&apos;),ISBLANK(No_Certificate_of_Ins_Explanation__c )), 
AND(ISPICKVAL(Written_safety_program_in_operation__c, &apos;Yes&apos;),ISBLANK(Safety_Program_Explanation__c )), 
AND(ISPICKVAL(Any_group_transportation_provided__c, &apos;Yes&apos;),ISBLANK(Group_Transportation_Explanation__c )), 
