<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PC_SubType_Required_when_40_or_greater</fullName>
    <active>false</active>
    <description>Deactivated with Hucklberry 3/4/2024</description>
    <errorConditionFormula>AND(
NOT(BEGINS($Profile.Name,&apos;System Admin&apos;)),
BEGINS($RecordType.DeveloperName, &apos;PC&apos;),
Probability&gt;=0.40,
NOT(ISBLANK(TEXT(OpportunityType__c))),(ISPICKVAL(HNBF_Sales_Type__c,&apos;&apos;)))</errorConditionFormula>
    <errorMessage>You must enter an Opportunity Sub-Type when the opportunity probability is 40% or greater.</errorMessage>
</ValidationRule>
