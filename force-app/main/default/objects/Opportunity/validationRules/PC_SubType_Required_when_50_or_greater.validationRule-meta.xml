<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PC_SubType_Required_when_50_or_greater</fullName>
    <active>false</active>
    <errorConditionFormula>AND(BEGINS($RecordType.DeveloperName, &apos;PC&apos;), Probability&gt;=0.50, NOT(ISBLANK(TEXT(OpportunityType__c))),(ISPICKVAL(HNBF_Sales_Type__c,&apos;&apos;)))</errorConditionFormula>
    <errorMessage>You must enter an Opportunity Sub-Type when the opportunity probability is 50% or greater.</errorMessage>
</ValidationRule>
