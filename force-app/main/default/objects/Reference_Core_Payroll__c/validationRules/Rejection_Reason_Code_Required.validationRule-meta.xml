<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Rejection_Reason_Code_Required</fullName>
    <active>true</active>
    <description>Rejection Reason Code Required if Exception Outcome field = Rejected</description>
    <errorConditionFormula>ISPICKVAL( Exception_Outcome__c , &quot;Rejected&quot; ) &amp;&amp; ISPICKVAL( Rejection_Reason_Code__c , &quot;&quot;)</errorConditionFormula>
    <errorDisplayField>Rejection_Reason_Code__c</errorDisplayField>
    <errorMessage>Please enter rejection reason code</errorMessage>
</ValidationRule>
