<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Fields_required_when_Termination</fullName>
    <active>false</active>
    <errorConditionFormula>AND
(
ISPICKVAL( Termination_or_Transfer__c, &quot;Termination&quot;),
ISBLANK( Last_Run_Date__c)
)</errorConditionFormula>
    <errorDisplayField>X1_Cloud_Updated__c</errorDisplayField>
    <errorMessage>Last Check Date is mandatory when Termination is selected</errorMessage>
</ValidationRule>
