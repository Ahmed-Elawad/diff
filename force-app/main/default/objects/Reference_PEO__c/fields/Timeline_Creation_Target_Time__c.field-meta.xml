<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Timeline_Creation_Target_Time__c</fullName>
    <businessStatus>Active</businessStatus>
    <description>This will need to be the [Contract Reviewed Time] field + 1 business day later. (Eastern time)
Case # 25025561</description>
    <formula>Contract_Reviewed_Time__c 
+ 
CASE( 
MOD( DATEVALUE(Contract_Reviewed_Time__c)-DATE( 1900, 1, 7 ), 7 ), 
5, 3, 
6, 2, 
1 
)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Timeline Creation Target Time</label>
    <required>false</required>
    <securityClassification>Internal</securityClassification>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>DateTime</type>
</CustomField>
