<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>If_IW_lost_time_then_need_details</fullName>
    <active>true</active>
    <description>If IW is losing time, then you need more details</description>
    <errorConditionFormula>AND 
( 
ISPICKVAL ( Has_the_IW_lost_time_as_a_result__c, &quot;Yes&quot;), 
ISBLANK ( Details_on_employee_losing_time__c ) 
)</errorConditionFormula>
    <errorDisplayField>Details_on_employee_losing_time__c</errorDisplayField>
    <errorMessage>If IW is losing time, then you need more details</errorMessage>
</ValidationRule>
