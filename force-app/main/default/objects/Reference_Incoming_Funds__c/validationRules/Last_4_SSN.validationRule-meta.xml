<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Last_4_SSN</fullName>
    <active>true</active>
    <description>Last 4 SSN must be 4 characters</description>
    <errorConditionFormula>AND(NOT(ISBLANK(Last_4_of_SSN__c)), NOT(LEN(Last_4_of_SSN__c)=4))</errorConditionFormula>
    <errorDisplayField>Last_4_of_SSN__c</errorDisplayField>
    <errorMessage>Last 4 SSN must be 4 characters</errorMessage>
</ValidationRule>
