    <formulas>
        <description>If the email of the requesting user is different than the email for the new user</description>
        <name>RequestorDifferentThanNewUser</name>
        <dataType>Boolean</dataType>
        <expression>{!$Record.Requestor_Email__c} &lt;&gt; {!$Record.New_User_Email__c}</expression>
    </formulas>
    <formulas>
        <description>Make sure it&apos;s only one of the request types we&apos;re concerned about</description>
        <name>RequestTypeOkay</name>
        <dataType>Boolean</dataType>
        <expression>OR (ISPICKVAL({!$Record.Request_Type__c},&quot;Chatter Free User&quot;), ISPICKVAL({!$Record.Request_Type__c},&quot;Reactivate&quot;), ISPICKVAL({!$Record.Request_Type__c},&quot;Standard User&quot;), ISPICKVAL({!$Record.Request_Type__c},&quot;Read Only&quot;))</expression>
