<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Client_Reference__c</field>
        <field>Account__c</field>
        <field>Contact__c</field>
        <field>Prospect_Client_Number__c</field>
        <field>Submitter__c</field>
        <field>Status__c</field>
        <field>VoC_Indicator__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Client_Reference_Seleted_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>set_Approved_datetime</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>VoC_Approval</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
        <rejectionActions>
            <action>
                <name>Client_Reference_Seleted_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>set_Approved_datetime</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>when sales rep requests a Client Reference from an Oppty, a Client Reference Selected is created and enters this approval process</description>
    <emailTemplate>AutoresponseEmailTemplate/Client_Reference_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Client_References_Selected__c.Status__c</field>
            <operation>equals</operation>
            <value>Waiting on Approval</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>clear_Reject_Reason</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>set_Client_Reference_Used_email</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>uncheck_Client_Ref_Approval_reminder</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>fill_Reject_Reason</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>uncheck_Client_Ref_Approval_reminder</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>check_Client_Ref_Approval_reminder</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Client Reference Selected Approval</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Client_Reference_Selected_Recalled</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>set_Approved_datetime</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
