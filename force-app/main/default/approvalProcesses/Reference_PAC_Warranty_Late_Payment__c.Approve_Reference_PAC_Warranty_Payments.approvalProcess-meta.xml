<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Date_Requested__c</field>
        <field>Payment_Requested_By__c</field>
        <field>Payment_Amount__c</field>
        <field>Payment_Approved_Denied_by__c</field>
        <field>Reference_PAC__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>If Payment Amount is less than or equal to $100.00, auto- approve the payment. 
If Payment Amount is greater than $100.00, then the submitter&apos;s Manager needs to approve the Payment Amount.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Reference_PAC_Warranty_Late_Payment__c.RecordType</field>
                <operation>equals</operation>
                <value>PAC Warranty Record Type</value>
            </criteriaItems>
            <criteriaItems>
                <field>Reference_PAC_Warranty_Late_Payment__c.Payment_Amount__c</field>
                <operation>greaterThan</operation>
                <value>100</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Check for Auto-approval</label>
        <name>Check_for_Auto_approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>kawolf@paychex.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>mfrankenberger@paychex.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If Payment Amount is less than $500.00, no further approval is required. 
If Payment Amount is greater than or equal to $500.00, then the PAC Manager needs to approve the Payment Amount.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Reference_PAC_Warranty_Late_Payment__c.RecordType</field>
                <operation>equals</operation>
                <value>PAC Warranty Record Type</value>
            </criteriaItems>
            <criteriaItems>
                <field>Reference_PAC_Warranty_Late_Payment__c.Payment_Amount__c</field>
                <operation>greaterOrEqual</operation>
                <value>500.00</value>
            </criteriaItems>
        </entryCriteria>
        <label>Check for Payment Amount greater than $500.00</label>
        <name>Check_for_Payment_Amount_greater_than_500_00</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>AutoresponseEmailTemplate/PAC_Warranty_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Reference_PAC_Warranty_Late_Payment__c.RecordType</field>
            <operation>equals</operation>
            <value>PAC Warranty Record Type</value>
        </criteriaItems>
        <criteriaItems>
            <field>Reference_PAC_Warranty_Late_Payment__c.Payment_Type__c</field>
            <operation>equals</operation>
            <value>Warranty</value>
        </criteriaItems>
        <criteriaItems>
            <field>Reference_PAC_Warranty_Late_Payment__c.Payment_Amount__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Reference_PAC_Warranty_Late_Payment__c.Warranty_Approved__c</field>
            <operation>equals</operation>
            <value>Pending</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Ref_PAC_WLP_Date_Approved_Denied_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Ref_PAC_WLP_Date_exited_Approval_Process</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Ref_PAC_WLP_Date_Warranty_Approved_Updat</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Ref_PAC_WLP_Payment_ApprvDenied_By_Upd</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Ref_PAC_WLP_Date_Approved_Denied_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Ref_PAC_WLP_Date_exited_Approval_Process</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Ref_PAC_WLP_Payment_ApprvDenied_By_Upd</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Ref_PAC_WLP_Warranty_Approved_rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reference_PAC_Rejected_Warranty_Payment_Approval_Request</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Ref_PAC_WLP_Date_entered_Approval_Proces</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Approve Reference PAC Warranty Payments</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Ref_PAC_WLP_Date_exited_Approval_Process</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
